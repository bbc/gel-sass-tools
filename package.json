{
  "name": "gel-sass-tools",
  "version": "3.4.0",
  "description": "A collection of Sass Settings & Tools which align to key GEL values",
  "main": "_sass-tools.scss",
  "scripts": {
    "prettier": "prettier --write '{src/**/*,test/**/*,*}.{mjs,json,scss}'",
    "pretest": "npm run prettier",
    "test": "sass --style=expanded --no-source-map test/test.scss test/test.css && diff -u test/test-expected.css test/test.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbc/gel-sass-tools.git"
  },
  "keywords": [
    "settings",
    "sass",
    "gel",
    "bbc",
    "responsive",
    "global",
    "experience",
    "language"
  ],
  "ignore": [
    "**/.*",
    "node_modules",
    "../",
    "test",
    "tests"
  ],
  "author": "BBC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbc/gel-sass-tools/issues"
  },
  "homepage": "https://github.com/bbc/gel-sass-tools",
  "dependencies": {
    "sass": "1.86.0",
    "sass-mq": "6.0.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "sass-true": "8.1.0"
  }
}
